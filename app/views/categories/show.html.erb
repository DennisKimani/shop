<h2>Welcome to
  <%= @category.name %>
</h2>
<p><%= link_to "Edit", edit_category_path(@category) %>|
  <%= link_to "Delete", category_path(@category), :data => {:confirm => "Are you sure you want to DELETE this category??", :method => "delete"} %>|
</p>

<%= link_to "Add a product", new_category_product_path(@category) %>

<% if @category.products.any? %>
  <ul style="text-decoration: none;">
    <% @category.products.each do |product| %>
      <li style="text-decoration: none;">
        <%= link_to product.name, category_product_path(@category, product) %><br>
        <%= link_to "Edit", edit_category_product_path(@category, product) %>
        |
        <%= link_to "Delete", category_product_path(@category, product), :data => {:confirm => "Are you sure?", :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no products yet!</p>
<% end %>
